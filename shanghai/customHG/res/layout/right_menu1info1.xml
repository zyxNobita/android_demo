<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_rightMenu1Info1ChangeOne"
            style="@style/PAGE_WIDTH_AND_HEIGHT"
           	android:layout_alignParentLeft="true"  >

            <ImageButton
                android:id="@+id/ib_pageLeftTwo"
                style="@style/PAGE_WIDTH_AND_HEIGHT"
                android:background="@drawable/left1"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_RM1I1ChangeOne"
                style="@style/PAGE_TEXTVIEW"
                android:background="@drawable/leftcontent_1"
                android:text="@string/daiclb"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_rightMenu1Info1ChangeTwo"
             style="@style/PAGE_WIDTH_AND_HEIGHT"
            android:layout_alignTop="@id/ll_rightMenu1Info1ChangeOne"
            android:layout_toRightOf="@id/ll_rightMenu1Info1ChangeOne" >

            <ImageButton
                android:id="@+id/ib_pageLeftThree"
                style="@style/PAGE_WIDTH_AND_HEIGHT"
                android:background="@drawable/left3"
                android:contentDescription="@null" />

            <TextView
                android:id="@+id/tv_RM1I1ChangeTwo"
                style="@style/PAGE_TEXTVIEW"
                android:background="@drawable/leftcontent_1"
                android:text="@string/zancxx"/>

            <ImageButton
                android:id="@+id/ib_pageLeftFour"
                style="@style/PAGE_WIDTH_AND_HEIGHT"
                android:background="@drawable/right1"
                android:contentDescription="@null" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_RM1I1_refurbish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_refurbish" />
    </RelativeLayout>

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        layout="@layout/right_menu1info1_listview_top" />

    <include
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        layout="@layout/right_menu1info1_listview_bottom" />

</LinearLayout>