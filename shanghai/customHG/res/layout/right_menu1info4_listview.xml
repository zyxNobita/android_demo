<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/LL_ShowResultTitle" >

        <TextView
            style="@style/TV_ShowResultTitle"
            android:text="@string/lv_title_RM1I4_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_RM1I4_lv_main_left"
            android:layout_width="300dp"
            android:layout_height="fill_parent" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_RM1I4_lv_main_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center" >

        <TextView
            android:id="@+id/tv_pageAgo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/icon_agopage"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_pageNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:background="@drawable/icon_nextpage"
            android:gravity="center" />
    </LinearLayout>
    <!--
         <include 
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        layout="@layout/page_listview_foot" />
    -->

</LinearLayout>