<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!-- 选择上传修改人，填写审核意见 -->
    <LinearLayout
        android:id="@+id/ll_RM1I4_chooseCheckViewDialog"
        style="@style/LV_TableTop" >
        
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView 
	         	android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:layout_gravity="center"
	        	android:text="@string/tv_RM1I4_dialog_text1" />
	        
	        <Spinner 
	            android:id="@+id/spn_RM1I4ChooseCheckViewDialog_spinner"
	            android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="3.5" 
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/select_optionbg" />
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	         <TextView 
	         	android:layout_width="0dp"
	        	android:layout_height="wrap_content"
	        	android:layout_weight="1"
	        	android:text="@string/tv_RM1I4_dialog_text2" />
	         
	         <EditText 
	            android:id="@+id/et_RM1I4ChooseCheckViewDialog_editText"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	        	android:layout_weight="3.5"
	        	android:singleLine="true"
	        	android:hint="" />
	    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal" >
        
        <Button
            android:id="@+id/btn_RM1I4ChooseCheckViewDialog_sure"
            style="@style/Btn_Search"
            android:layout_marginRight="20dp"
            android:text="@string/makeSure" />
        
        <Button
            android:id="@+id/btn_RM1I4ChooseCheckViewDialog_close"
            style="@style/Btn_Search"
            android:layout_marginRight="20dp"
            android:text="@string/cancel" />
    </LinearLayout>

</LinearLayout>