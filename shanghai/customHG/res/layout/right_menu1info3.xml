<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >
            
            <TextView
                android:layout_width="100dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/tv_manifestNumber"
                android:textSize="22sp" />
            
            <EditText
                android:id="@+id/et_RM1I3_barCode"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/editbg"
                android:paddingLeft="20dp"
                android:hint="@null" />
        </LinearLayout>
        
        <Button
            android:id="@+id/btn_RM1I3_scan"
            style="@style/Btn_AllButton"
            android:layout_marginLeft="10dp"
            android:text="@string/scan" />

        <Button
            android:id="@+id/btn_RM1I3_makeSure"
            style="@style/Btn_AllButton"
            android:layout_marginLeft="10dp"
            android:text="@string/search" />

        <Button
            android:id="@+id/btn_RM1I3_detail"
            style="@style/Btn_AllButton"
            android:layout_marginLeft="10dp"
            android:tag="1"
            android:text="@string/btn_goodsItem" />
    </LinearLayout>
    
	<!-- 加载  表头的布局文件 -->
    <include layout="@layout/right_menu1info3_tablehead"/>
    <!-- 加载   表体的布局文件  -->
    <include 
        android:id="@+id/View_takeTableBodyPhotos"
        layout="@layout/right_pic_interaction_info"/>
    
</LinearLayout>